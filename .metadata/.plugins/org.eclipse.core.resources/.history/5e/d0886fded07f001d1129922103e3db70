package fundamentos;

import java.util.Scanner;

public class Console {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.err.print("Bom ");
		System.out.print(" dia!\n\n\n");
		
		System.out.printf("Megasena: %d %d %d %d %d %d",
			1, 2, 3, 4, 5, 6 );
		System.out.printf("\nPremio: %.1f\n\n", 2356790.37);
		
		//Scanner
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Digite seu nome: ");
		String nome = entrada.nextLine();
		
		System.out.print("Digite seu sobrenome: ");
		String sobrenome = entrada.nextLine();
		
		System.out.print("Digite sua idade: ");
		String idade = entrada.nextInt();
		String anos = new String(idade).toString();
	
		System.out.printf("\n\nBem vindo: %s vocÃª tem %d anos"
				,nome, sobrenome ,anos);
	}

}
